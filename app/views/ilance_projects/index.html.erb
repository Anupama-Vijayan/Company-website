<h1>Listing ilance_projects</h1>

<table class="table table-hover data-table" border="1" data-page-length='2'>
<thead>
    <tr>
        <th style="width:17.5%">Date Added</th>
        <th style="width:17.5%">Project Title</th>
        <th style="width:17.5%">Category</th>
        <th style="width:17.5%">Username</th>
        <th style="width:10%"></th>
        <th style="width:10%"></th>
        <th style="width:10%"></th>

    </tr>
</thead>
<tbody>
  <% @ilance_projects.each do |ilance_project| %>
  <tr>
    <td><%= ilance_project.date_added %></td>
    <td><%= ilance_project.project_title %></td>
    <td><%= ilance_project.ilance_category.try(:name) %></td>
    <td><%= ilance_project.ilance_user.try(:username) %></td>
    <td><%= link_to 'Show', ilance_project %></td>
    <td><%= link_to 'Edit', edit_ilance_project_path(ilance_project) %></td>
    <td><%= link_to 'Destroy', ilance_project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
</tbody>
</table>
<%= link_to 'New Ilance project', new_ilance_project_path %>

<script type="text/javascript">
  $(document).ready(function(){
    $('.data-table').DataTable();
  });
</script>